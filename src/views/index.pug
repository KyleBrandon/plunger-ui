extends layout

block content
    .container
        .header
            h1= title
        .row
            .column
                .cell
                    p.cell-title Plunge
                    .cell-display
                        p.cell-data( data-id="plunge-message" ) Status: <span/>
                        p.cell-data( data-id="plunge-start-temperature" ) Start Temp: <span/>
                        p.cell-data( data-id="plunge-end-temperature" ) End Temp: <span/>
                        p.cell-data( data-id="plunge-elapsed-time" ) Elapsed Time: <span/>
                        .buttons
                            button.button#start-plunge(type='button') Start Plunge
                            button.button#stop-plunge(type='button') Stop Plunge
            .column
                .cell
                    p.cell-title Temperature
                    .cell-display
                        p.cell-data( data-id="current-water-temp" ) Current Water: <span/>
                        p.cell-data( data-id="current-room-temp" ) Current Room: <span/>
        .row
            .column
                .cell
                p.cell-title Ozone Status
                    .cell-display
                        p.cell-data( data-id="ozone-status" ) Satus: <span/>
                        p.cell-data( data-id="ozone-start" ) Start Time: <span/>
                        p.cell-data( data-id="ozone-end" ) End Time: <span/>
                        p.cell-data( data-id="ozone-time-left" ) Time Left: <span/>
                        .buttons
                            button.button#ozone-power(type='button') Start Ozone
            .column
                .cell
                    p.cell-title Leak Present
                    .cell-display
                        p.cell-data(data-id="leak-present") Status: <span/>
            .column
                .cell
                    p.cell-title Pump Status
                    .cell-display
                            p.cell-data(data-id="pump-status") Status: <span/>

    script.
        $(document).ready(function() {
            function updateCellData() {
                $.ajax({
                    url: '/api/sensors',
                    method: 'GET',
                    success: function(sensorData) {
                        let waterMessage = sensorData.waterMessage;
                        // update the current water temperature 
                        if (waterMessage == '') {
                            waterMessage = `${sensorData.waterTemperature.toFixed(1)} °F`;
                        }

                        $(`.cell-data[data-id='current-water-temp'] span`).text(waterMessage)

                        // update the current room temperature 
                        let roomMessage = sensorData.roomMessage;
                        if (roomMessage == '') {
                            roomMessage = `${sensorData.roomTemperature.toFixed(1)} °F`;
                        }
                        $(`.cell-data[data-id='current-room-temp'] span`).text(roomMessage)

                        // update leak indication
                        let leakMessage = sensorData.leakMessage;
                        if (leakMessage == '') {
                            leakMessage = sensorData.leakPresent ? "True" : "False";
                        }
                        $(`.cell-data[data-id='leak-present'] span`).text(leakMessage);

                        // update the ozone message
                        updateOzoneStatus(sensorData);

                        $(`.cell-data[data-id='pump-status'] span`).text(sensorData.pumpStatus);
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', status, error);
                    }
                });
            }

            updateCellData();
            setInterval(updateCellData, 5000);

            $('#ozone-power').click(function() {
                $.ajax({
                    url: '/api/ozone',
                    method: 'POST',
                    success: function(data) {
                    },
                    error: function(xhr, status, error) {
                        console.error(`Error: ${status} ${error}`);
                    }
                });
            });

            $('#start-plunge').click(function() {
                $.ajax({
                    url: '/api/plunge/start',
                    method: 'POST',
                    success: function(data) {
                        console.log(data);
                        $(`.cell-data[data-id='plunge-message'] span`).text(data.message);
                        $(`.cell-data[data-id='plunge-start-temperature'] span`).text(data.start_water_temp);
                        $(`.cell-data[data-id='plunge-end-temperature'] span`).text("");
                        $(`.cell-data[data-id='plunge-elapsed-time'] span`).text("0");

                    },
                    error: function(xhr, status, error) {
                        console.error(`Error: ${status} ${error}`);
                    }
                });
            });

            $('#stop-plunge').click(function() {
                $.ajax({
                    url: '/api/plunge/stop',
                    method: 'PUT',
                    success: function(data) {
                        console.log(data);
                        $(`.cell-data[data-id='plunge-message'] span`).text(data.message);
                        $(`.cell-data[data-id='plunge-start-temperature'] span`).text(data.start_water_temp);
                        $(`.cell-data[data-id='plunge-end-temperature'] span`).text(data.end_water_temp);
                        $(`.cell-data[data-id='plunge-elapsed-time'] span`).text("0");
                    },
                    error: function(xhr, status, error) {
                        console.error(`Error: ${status} ${error}`);
                    }
                });
            });

            function updateOzoneStatus(sensorData) {
                $(`.cell-data[data-id='ozone-status'] span`).text(sensorData.ozoneStatus);
                $(`.cell-data[data-id='ozone-start'] span`).text(sensorData.ozoneStart);
                $(`.cell-data[data-id='ozone-end'] span`).text(sensorData.ozoneEnd);
                $(`.cell-data[data-id='ozone-time-left'] span`).text(sensorData.ozoneTimeLeft);

                if (sensorData.ozoneStatus == 'Running') {
                    $(`#ozone-power`).text("Stop Ozone");
                } else {
                    $(`#ozone-power`).text("Start Ozone");
                }

            }

        });
